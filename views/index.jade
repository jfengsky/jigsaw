extends layout

block content
  section.main
    // 顶部轮播焦点图 可不显示
    #top.banner
      ul.piclist
        li
          img(src='/img/007.jpg',width='480',height='180')
        li
          img(src='/img/008.jpg',width='480',height='180')
        li
          img(src='/img/009.jpg',width='480',height='180')

      ul.switch
        li.cur 1
        li 2
        li 3

    // 主导航 tab切换效果
    nav
      ul
        li.cur
          b 100
          span 新
          i
        li
          b 10
          span 已完成
          i
        li
          b 99
          span rank
          i

    // 图片列表
    .list
      ul
        li
          img(src='/img/007.jpg',width='120',height='200')
        li
          img(src='/img/008.jpg',width='120',height='200')
        li
          img(src='/img/009.jpg',width='120',height='200')
        li
          img(src='/img/007.jpg',width='120',height='200')
        li
          img(src='/img/008.jpg',width='120',height='200')
        li
          img(src='/img/009.jpg',width='120',height='200')
        li
          img(src='/img/007.jpg',width='120',height='200')
        li
          img(src='/img/009.jpg',width='120',height='200')

  script(src='/js/index.js')